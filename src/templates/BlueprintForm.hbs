								<option value="int" {{selected blueprint.abilities.quickstart.[1].ability "int"}}>Intelligence</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[1].ability "wis"}}>Sagesse</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[1].ability "cha"}}>Charisme</option>
							</select>
						</div>
						<div class="form-group">
							<label>3ème</label>
							<select class="form-control" name="abilities.quickstart[2].ability" ability="{{blueprint.abilities.quickstart.[2].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[2].ability "str"}}>Force</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[2].ability "dex"}}>Dextérité</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[2].ability "con"}}>Constitution</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[2].ability "int"}}>Intelligence</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[2].ability "wis"}}>Sagesse</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[2].ability "cha"}}>Charisme</option>
							</select>
						</div>
						<div class="form-group">
							<label>4ème</label>
							<select class="form-control" name="abilities.quickstart[3].ability" ability="{{blueprint.abilities.quickstart.[3].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[3].ability "str"}}>Force</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[3].ability "dex"}}>Dextérité</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[3].ability "con"}}>Constitution</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[3].ability "int"}}>Intelligence</option>
								<option value="wis" {{selected blueprint.abilities.quickstart.[3].ability "wis"}}>Sagesse</option>
								<option value="cha" {{selected blueprint.abilities.quickstart.[3].ability "cha"}}>Charisme</option>
							</select>
						</div>
						<div class="form-group">
							<label>5ème</label>
							<select class="form-control" name="abilities.quickstart[4].ability" ability="{{blueprint.abilities.quickstart.[4].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[4].ability "str"}}>Force</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[4].ability "dex"}}>Dextérité</option>
