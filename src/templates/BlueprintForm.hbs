<form id="laboratory-blueprint-form" data-method="{{blueprint.method}}" data-rank="{{blueprint.description.rank}}">
	<div class="form-group">
		<label>Méthode <button type="button" class="btn btn-sm btn-help icon-only" data-toggle="modal" data-target="#modal-blueprint-help-method"><span class="fas fa-question-circle"></span></button></label>
		<div class="form-radio-list">
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" value="quickstart" id="blueprint-method-quickstart" name="method" {{checked blueprint.method "quickstart"}}>
				<label class="form-check-label" for="blueprint-method-quickstart">Rapide</label>
			</div>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" value="manual" id="blueprint-method-manual" name="method" {{checked blueprint.method "manual"}}>
				<label class="form-check-label" for="blueprint-method-manual">Manuelle</label>
			</div>
		</div>
	</div>
	<div class="form-group hidden">
		<label>VID</label>
		<input type="text" class="form-control" name="vid" {{{setValue blueprint.vid}}}>
	</div>
	<div class="accordion" id="accordion-blueprint">
				<div class="card manual-only">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-challenge" {{#if display.blueprint-challenge}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Niveau de combat</span>
				</button>
			</div>
			<div id="blueprint-challenge" class="collapse {{#if display.blueprint-challenge}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>Niveau</label>
						<select class="form-control custom-toggle" name="challenge.combatLevel" id="monster-cr">
							<option value="custom" {{selected blueprint.challenge.combatLevel "custom"}}>Custom</option>
							<option value="1" {{selectedDefault blueprint.challenge.combatLevel "1"}}>1</option>
							<option value="2" {{selected blueprint.challenge.combatLevel "2"}}>2</option>
							<option value="3" {{selected blueprint.challenge.combatLevel "3"}}>3</option>
							<option value="4" {{selected blueprint.challenge.combatLevel "4"}}>4</option>
							<option value="5" {{selected blueprint.challenge.combatLevel "5"}}>5</option>
							<option value="6" {{selected blueprint.challenge.combatLevel "6"}}>6</option>
							<option value="7" {{selected blueprint.challenge.combatLevel "7"}}>7</option>
							<option value="8" {{selected blueprint.challenge.combatLevel "8"}}>8</option>
							<option value="9" {{selected blueprint.challenge.combatLevel "9"}}>9</option>
							<option value="10" {{selected blueprint.challenge.combatLevel "10"}}>10</option>
							<option value="11" {{selected blueprint.challenge.combatLevel "11"}}>11</option>
							<option value="12" {{selected blueprint.challenge.combatLevel "12"}}>12</option>
							<option value="13" {{selected blueprint.challenge.combatLevel "13"}}>13</option>
							<option value="14" {{selected blueprint.challenge.combatLevel "14"}}>14</option>
							<option value="15" {{selected blueprint.challenge.combatLevel "15"}}>15</option>
							<option value="16" {{selected blueprint.challenge.combatLevel "16"}}>16</option>
							<option value="17" {{selected blueprint.challenge.combatLevel "17"}}>17</option>
							<option value="18" {{selected blueprint.challenge.combatLevel "18"}}>18</option>
							<option value="19" {{selected blueprint.challenge.combatLevel "19"}}>19</option>
							<option value="20" {{selected blueprint.challenge.combatLevel "20"}}>20</option>
						</select>
					</div>
					<div class="form-group custom" {{{customToggle blueprint.challenge.combatLevel}}}>
						<label>Custom CR</label>
						<input type="text" class="form-control" name="challenge.custom.combatLevel" placeholder="0" min="0" {{{setValue blueprint.challenge.custom.combatLevel}}}>
					</div>
					<div class="form-group custom" {{{customToggle blueprint.challenge.combatLevel}}}>
						<label>Maîtrise</label>
						<input type="number" class="form-control" name="challenge.custom.proficiency" placeholder="0" min="0" {{{setValue blueprint.challenge.custom.proficiency}}}>
					</div>
					<div class="form-group custom" {{{customToggle blueprint.challenge.combatLevel}}}>
						<label>XP</label>
						<input type="number" class="form-control" name="challenge.custom.xp" placeholder="0" min="0" {{{setValue blueprint.challenge.custom.xp}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#blueprint-description" {{#if display.blueprint-description}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Description</span>
				</button>
			</div>
			<div id="blueprint-description" class="collapse {{#if display.blueprint-description}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>Nom</label>
						<input type="text" class="form-control" name="description.name" placeholder="Monstre" {{{setValue blueprint.description.name}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Niveau</label>
						<input type="number" class="form-control" name="description.level" placeholder="0" min="1" max="20" {{{setValue blueprint.description.level}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Rôle</label>
						<select class="form-control" name="description.role">
							<option value="controller" {{selected blueprint.description.role "controller"}}>Contrôleur</option>
							<option value="defender" {{selected blueprint.description.role "defender"}}>Défenseur</option>
							<option value="lurker" {{selected blueprint.description.role "lurker"}}>Rôdeur</option>
							<option value="skirmisher" {{selected blueprint.description.role "skirmisher"}}>Éclaireur</option>
							<option value="striker" {{selected blueprint.description.role "striker"}}>Assaillant</option>
							<option value="supporter" {{selected blueprint.description.role "supporter"}}>Soutien</option>
						</select>
					</div>
					<div class="form-group quickstart-only">
						<label>Rang</label>
						<select class="form-control rank-toggle" name="description.rank">
							<option value="minion" {{selected blueprint.description.rank "minion"}}>Sbire</option>
							<option value="standard" {{selected blueprint.description.rank "standard"}}>Standard</option>
							<option value="elite" {{selected blueprint.description.rank "elite"}}>Élite</option>
							<option value="solo" {{selected blueprint.description.rank "solo"}}>Solo</option>
						</select>
					</div>
					<div class="form-group quickstart-only solo-only">
						<label>Joueurs</label>
						<input type="number" class="form-control" name="description.players" placeholder="0" min="1" {{{setValue blueprint.description.players}}}>
					</div>
					<div class="form-group quickstart-only solo-only">
						<label>Phase</label>
						<div class="flex-input">
							<input type="number" class="form-control" name="description.phase" placeholder="1" min="1" {{{setValue blueprint.description.phase}}}>
							<span>sur</span>
							<input type="number" class="form-control" name="description.phases" placeholder="1" min="1" {{{setValue blueprint.description.phases}}}>
						</div>
					</div>
					<div class="form-group">
						<label>Taille</label>
						<select class="form-control" name="description.size">
							<option value="tiny" {{selected blueprint.description.size "tiny"}}>Très Petite (TP)</option>
							<option value="small" {{selected blueprint.description.size "small"}}>Petite (P)</option>
							<option value="medium" {{selectedDefault blueprint.description.size "medium"}}>Moyenne (M)</option>
							<option value="large" {{selected blueprint.description.size "large"}}>Grande (G)</option>
							<option value="huge" {{selected blueprint.description.size "huge"}}>Très Grande (TG)</option>
							<option value="gargantuan" {{selected blueprint.description.size "gargantuan"}}>Gigantesque (Gig)</option>
						</select>
					</div>
					<div class="form-group">
						<label>Type</label>
						<select class="form-control" name="description.type">
							<option value="aberration" {{selected blueprint.description.type "aberration"}}>Aberration</option>
							<option value="construct" {{selected blueprint.description.type "construct"}}>Artificiel</option>
							<option value="beast" {{selected blueprint.description.type "beast"}}>Bête</option>
							<option value="celestial" {{selected blueprint.description.type "celestial"}}>Céleste</option>
							<option value="dragon" {{selected blueprint.description.type "dragon"}}>Dragon</option>
							<option value="elemental" {{selected blueprint.description.type "elemental"}}>Élémentaire</option>
							<option value="fey" {{selected blueprint.description.type "fey"}}>Fée</option>
							<option value="fiend" {{selected blueprint.description.type "fiend"}}>Fiélon</option>
							<option value="giant" {{selected blueprint.description.type "giant"}}>Géant</option>
							<option value="humanoid" {{selectedDefault blueprint.description.type "humanoid"}}>Humanoïde</option>
							<option value="monstrosity" {{selected blueprint.description.type "monstrosity"}}>Monstruosité</option>
							<option value="undead" {{selected blueprint.description.type "undead"}}>Mort-vivant</option>
							<option value="plant" {{selected blueprint.description.type "plant"}}>Plante</option>
							<option value="ooze" {{selected blueprint.description.type "ooze"}}>Vase</option>
						</select>
					</div>
					<div class="form-group">
						<label>Alignement</label>
						<select class="form-control" name="description.alignment">
							<option value="lawful good" {{selected blueprint.description.alignment "lawful good"}}>Loyal Bon</option>
							<option value="neutral good" {{selected blueprint.description.alignment "neutral good"}}>Neutre Bon</option>
							<option value="chaotic good" {{selected blueprint.description.alignment "chaotic good"}}>Chaotique Bon</option>
							<option value="lawful neutral" {{selected blueprint.description.alignment "lawful neutral"}}>Loyal Neutre</option>
							<option value="neutral" {{selectedDefault blueprint.description.alignment "neutral"}}>Neutre</option>
							<option value="chaotic neutral" {{selected blueprint.description.alignment "chaotic neutral"}}>Chaotique Neutre</option>
							<option value="lawful evil" {{selected blueprint.description.alignment "lawful evil"}}>Loyal Mauvais</option>
							<option value="neutral evil" {{selected blueprint.description.alignment "neutral evil"}}>Neutre Mauvais</option>
							<option value="chaotic evil" {{selected blueprint.description.alignment "chaotic evil"}}>Chaotique Mauvais</option>
							<option value="unaligned" {{selected blueprint.description.alignment "unaligned"}}>Sans Alignement</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="card repeatable-section" data-path="tags" data-template="BlueprintFormTag">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-tags" {{#if display.blueprint-tags}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Tags</span>
					<span class="badge">{{blueprint.tags.length}}</span>
				</button>
			</div>
			<div id="blueprint-tags" class="collapse {{#if display.blueprint-tags}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					{{#each blueprint.tags}}
						{{> BlueprintFormTag this}}
					{{/each}}
				</div>
				<div class="card-footer text-right">
					<button type="button" class="btn btn-sm btn-secondary btn-add">
						<span class="fas fa-plus"></span> Ajouter un Tag
					</button>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#blueprint-display" {{#if display.blueprint-display}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Affichage</span>
				</button>
			</div>
			<div id="blueprint-display" class="collapse {{#if display.blueprint-display}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>Thème <button type="button" class="btn btn-sm btn-help icon-only" data-toggle="modal" data-target="#modal-blueprint-help-theme"><span class="fas fa-question-circle"></span></button></label>
						<select class="form-control" name="display.theme">
							<option value="default" {{selected blueprint.display.theme "default"}}>Par défaut</option>
							<option value="diamond" {{selected blueprint.display.theme "diamond"}}>Diamant</option>
							<option value="giffyglyph" {{selected blueprint.display.theme "giffyglyph"}}>Giffyglyph</option>
							<option value="giffyglyph-v4" {{selected blueprint.display.theme "giffyglyph-v4"}}>Giffyglyph V4</option>
							<option value="5e" {{selected blueprint.display.theme "5e"}}>5e</option>
							<option value="transparent" {{selected blueprint.display.theme "transparent"}}>Transparent</option>
						</select>
					</div>
					<div class="form-group">
						<label>Colonnes</label>
						<select class="form-control" name="display.columns">
							<option value="1" {{selected blueprint.display.columns "1"}}>1</option>
							<option value="2" {{selected blueprint.display.columns "2"}}>2</option>
						</select>
					</div>
					<div class="form-group">
						<label>Image Url <button type="button" class="btn btn-sm btn-help icon-only" data-toggle="modal" data-target="#modal-blueprint-help-image"><span class="fas fa-question-circle"></span></button></label>
						<input type="text" class="form-control" name="display.image.url" {{{setValue blueprint.display.image.url}}}>
					</div>
					<div class="form-group">
						<label>Position</label>
						<select class="form-control" name="display.image.position">
							<option value="banner" {{selected blueprint.display.image.position "banner"}}>Bannière</option>
							<option value="inline" {{selected blueprint.display.image.position "inline"}}>En ligne</option>
							<option value="none" {{selected blueprint.display.image.position "none"}}>Aucune</option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-armor" {{#if display.blueprint-armor}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Défense</span>
				</button>
			</div>
			<div id="blueprint-armor" class="collapse {{#if display.blueprint-armor}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group manual-only">
						<label>Montant</label>
						<input type="number" class="form-control" name="ac.base" placeholder="0" {{{setValue blueprint.ac.base}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Modificateur</label>
						<input type="number" class="form-control" name="ac.modifier" placeholder="0" {{{setValue blueprint.ac.modifier}}}>
					</div>
					<div class="form-group">
						<label>Type</label>
						<input type="text" class="form-control" name="ac.type" {{{setValue blueprint.ac.type}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-hp" {{#if display.blueprint-hp}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Points de vie</span>
				</button>
			</div>
			<div id="blueprint-hp" class="collapse {{#if display.blueprint-hp}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group manual-only">
						<label>Montant</label>
						<input type="number" class="form-control" name="hp.average" placeholder="0" min="0" {{{setValue blueprint.hp.average}}}>
					</div>
					<div class="form-group quickstart-only">
						<label>Modificateur</label>
						<input type="number" class="form-control" name="hp.modifier" placeholder="0" {{{setValue blueprint.hp.modifier}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card quickstart-only">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-damage" {{#if display.blueprint-damage}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Dégâts</span>
				</button>
			</div>
			<div id="blueprint-damage" class="collapse {{#if display.blueprint-damage}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group quickstart-only">
						<label>Modificateur</label>
						<input type="number" class="form-control" name="damage.modifier" placeholder="0" {{{setValue blueprint.damage.modifier}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-speed" {{#if display.blueprint-speed}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Vitesse</span>
				</button>
			</div>
			<div id="blueprint-speed" class="collapse {{#if display.blueprint-speed}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="form-group">
						<label>Normal</label>
						<input type="text" class="form-control" name="speed.normal" {{{setValue blueprint.speed.normal}}}>
					</div>
					<div class="form-group">
						<label>Creusement</label>
						<input type="text" class="form-control" name="speed.burrow" {{{setValue blueprint.speed.burrow}}}>
					</div>
					<div class="form-group">
						<label>Escalade</label>
						<input type="text" class="form-control" name="speed.climb" {{{setValue blueprint.speed.climb}}}>
					</div>
					<div class="form-group">
						<label>Vol</label>
						<input type="text" class="form-control" name="speed.fly" {{{setValue blueprint.speed.fly}}}>
					</div>
					<div class="form-group">
						<label>Nage</label>
						<input type="text" class="form-control" name="speed.swim" {{{setValue blueprint.speed.swim}}}>
					</div>
					<div class="form-group">
						<label>Autre</label>
						<input type="text" class="form-control" name="speed.other" {{{setValue blueprint.speed.other}}}>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#blueprint-abilities" {{#if display.blueprint-abilities}}aria-expanded="true"{{/if}}>
					<span class="fas fa-chevron-right"></span>
					<span class="title">Attributs</span>
				</button>
			</div>
			<div id="blueprint-abilities" class="collapse {{#if display.blueprint-abilities}}show{{/if}}" data-parent="#accordion-blueprint">
				<div class="card-body">
					<div class="quickstart-only unique-values abilities">
						<div class="form-group">
							<label>Meilleur</label>
							<select class="form-control" name="abilities.quickstart[0].ability" ability="{{blueprint.abilities.quickstart.[0].ability}}">
								<option value="str" {{selected blueprint.abilities.quickstart.[0].ability "str"}}>Force</option>
								<option value="dex" {{selected blueprint.abilities.quickstart.[0].ability "dex"}}>Dextérité</option>
								<option value="con" {{selected blueprint.abilities.quickstart.[0].ability "con"}}>Constitution</option>
								<option value="int" {{selected blueprint.abilities.quickstart.[0].ability "int"}}>Intelligence</option>
